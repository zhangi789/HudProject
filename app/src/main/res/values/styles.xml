<resources>

    <!-- Base application theme. parent="Theme.AppCompat.Light.DarkActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="Inputstyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/iron</item>
        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="devicestyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/result_view</item>
        <item name="colorControlNormal">@color/result_view</item>
        <item name="colorControlActivated">@color/result_view</item>
        <item name="colorControlHighlight">@color/result_view</item>
    </style>


    <!-- Base application theme. -->
    <!--  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
          &lt;!&ndash; Customize your theme here. &ndash;&gt;
          &lt;!&ndash;导航栏的颜色&ndash;&gt;
          <item name="colorPrimary">@color/colorPrimary</item>
          &lt;!&ndash;状态栏的颜色&ndash;&gt;
          <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
      </style>-->

    <style name="Theme.Drawer.ArrowAnimation" parent="AppTheme">
        <!-- 箭头 -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>
    <!-- 箭头颜色 -->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="homeTV">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_tv</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_alignBottom">@id/iv_hud</item>
    </style>

    <style name="homeSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="toorIV">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="reIV">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>

    </style>


    <style name="style1IV">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_tv</item>

    </style>

    <style name="sytyle2IV">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_more2x</item>

    </style>

    <style name="sytyle3IV">

        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/shape</item>

    </style>

    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">4.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/seekbar_horizontal</item>
        <item name="android:minHeight">4.0dip</item>
        <item name="android:thumb">@drawable/icon_spot_16x16</item>

        <item name="android:thumbOffset">10.0dip</item>
    </style>


    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>
