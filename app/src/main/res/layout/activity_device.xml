<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical">

    <include
        android:id="@+id/info"
        layout="@layout/toor_head_back"></include>

    <RelativeLayout
        android:id="@+id/re_bind_device"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/info"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:alpha="0.5"
            android:background="#ffffff"></RelativeLayout>

        <TextView
            android:id="@+id/tv_bind_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/common_icon_arrow_right2x" />


    </RelativeLayout>
    <Button
        android:id="@+id/btn_unbid"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_select4"
        android:text="更改设备"
        android:textColor="@color/color_tv"
        android:textSize="14sp" />


</RelativeLayout>