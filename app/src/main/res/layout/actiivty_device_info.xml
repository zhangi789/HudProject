<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/info"
        layout="@layout/toor_head2_back"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/info"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#F7F7F9">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="基本信息"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:background="#E4E4E4"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="44dp">

            <TextView
                android:textColor="#f5000000"
                android:id="@+id/device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="设备序列号"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/device_id"
                android:gravity="right"
                android:text=""
                android:textSize="16sp" />

        </RelativeLayout>
        <TextView
            android:background="#E4E4E4"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <RelativeLayout
            android:id="@+id/re_bei_name"
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="备注名称"
                android:textColor="#f5000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/copy_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@+id/ivs2"
                android:gravity="right"
                android:text="点击添加备注"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivs2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/common_icon_arrow_right2x" />
        </RelativeLayout>

        <TextView
            android:background="#E4E4E4"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout

            android:id="@+id/re_type_car"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:textColor="#f5000000"
                android:id="@+id/tv_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="车型"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/copy_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@+id/ivs3"
                android:gravity="right"
                android:text="点击添加车型"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivs3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/common_icon_arrow_right2x" />
        </RelativeLayout>
        <TextView
            android:background="#E4E4E4"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:textColor="#f5000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="OBD自动获得车型"
                android:textSize="16sp" />
        </RelativeLayout>
        <TextView
            android:background="#E4E4E4"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout

            android:id="@+id/re_fw_version"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:textColor="#f5000000"
                android:id="@+id/tv_fireware"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="固件版本"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/ivs5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/common_icon_arrow_right2x" />
        </RelativeLayout>
        <TextView
            android:background="#E4E4E4"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>


</RelativeLayout>